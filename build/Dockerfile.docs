FROM ruby:2.5

RUN gem install bundler

WORKDIR /repo
COPY ./docs/Gemfile /repo
COPY ./docs/Gemfile.lock /repo
RUN bundle install

COPY ./docs /repo
RUN JEKYLL_ENV=production bundle exec jekyll build --config _config.yml,_override.yml
